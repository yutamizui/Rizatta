<!DOCTYPE html>
<html>
  <head>
    <title><%= t('app_name') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <div class="col-md-12">
        <%= render 'shared/navbar' %>
      </div>
    </div>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <br>
    <div class="container">
      <div class="row">
        <% if company_admin || current_staff.present? && current_staff.status == "general"%>  <%# 管理者用の表示%>
          <div class="col-md-2">
            <%= render 'shared/dashboard_verticalnavbar' %>
          </div>
          <div class="col-md-10">
            <%= yield %>
          </div>
        <% elsif current_user.present? %>
          <div class="col-md-12">
            <div class="row">
              <div class="display_point pull-right" %>
                <%= t("activerecord.attributes.ticket.currently_owned") %>
                <br>
                <span>
                  <%= current_user.tickets.where("expired_at >= ?", Date.today.end_of_day).where(status: true).count %>
                  <%= t("activerecord.attributes.ticket.sheet") %>
                </span>
              </div>
            </div>
            <%= yield %>
          </div>
        <% else %>
          <div class="col-md-12">
            <div class="row">
              <%= yield %>
            </div>
          </div>
        <% end %>
      </div>  
    </div>
    <%= render 'shared/footer' %>
    <!-- Optional JavaScript; choose one of the two! -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  </body>
</html> 

