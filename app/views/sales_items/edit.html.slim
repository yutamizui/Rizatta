  div.col-md-12
    div class="card"
      div class="card-header text-white bg-secondary mb-3" 
        h4  = t('activerecord.attributes.branch.edit')
      div class="card-body"
        == render 'shared/errors', obj: @sales_item
        = form_for @sales_item, url: sales_item_path do |f|
          == render 'sales_items/form', f: f
          = f.submit  t('activerecord.attributes.link.update'), class:"btn btn-info"
