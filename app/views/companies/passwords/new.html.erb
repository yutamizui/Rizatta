<h2><%= t('devise.passwords.new.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "companies/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class:"btn company-title-color button-margin" %>
  </div>
<% end %>

<%= render "companies/shared/links" %>

<div col-md-12>
  <div col-md-2>
    <%= link_to t('activerecord.attributes.link.back'), new_company_session_path, class:"btn btn-secondary btn-sm button-margin" %>
  </div>
</div>